#!/usr/bin/env sh

echo "🚀 Pre-commit hook: Switching Git user account..."

# Run the Git user switching script
yarn run config

# Check if the user switch was successful
if [ $? -eq 0 ]; then
    echo "✅ Git user switched successfully, proceeding with commit..."
else
    echo "❌ Failed to switch Git user, aborting commit..."
    exit 1
fi
